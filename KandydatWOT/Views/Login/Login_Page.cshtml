@{
    ViewBag.Title = "Logowanie";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <!--<h1 class="text-center login-title">Zaloguj się do aplikacji Kandydat</h1>-->
            <div class="account-wall">
                <img class="profile-img" src="../../favicon.ico"
                    alt="">
                <form class="form-signin" action="@Url.Action("Dashboard")" method="post">
                <input type="text" class="form-control" placeholder="Nazwa użytkownika" required autofocus name="username">
                <input type="password" class="form-control" placeholder="Hasło" required name="password">
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="LoginBtn" value="Login">
                    Zaloguj się</button>
                
                <a href="#" class="pull-right need-help">Potrzebujesz pomocy? </a><span class="clearfix"></span>
                </form>
            </div>
        </div>
    </div>
</div>